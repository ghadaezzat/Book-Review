<h1>Edit Book</h1>

		<%= simple_form_for @book, :html => { :multipart => true } do |f| %>
                          <%= f.input :title, label: "Book Title" %>
                          <%= f.file_field :book_img %>
                          <%= f.input :description %>
                          <%= f.input :author %>
                          <%= f.select :category_id, @categories, class: "btn btn-lg btn-default" %>
                          <%= f.button :submit, :class => "btn-primary" %>
		<% end %>